/* ── Search bar (jobs view) ──────────────────────────────── */

#search-bar {
    dock: bottom;
    height: 3;
    margin: 0 1;
    border: tall $accent;
}

/* ── Header ─────────────────────────────────────────────── */

Header {
    background: $primary;
    color: $background;
}

/* ── Footer ─────────────────────────────────────────────── */

Footer {
    background: $panel;
    color: $text-muted;
}
